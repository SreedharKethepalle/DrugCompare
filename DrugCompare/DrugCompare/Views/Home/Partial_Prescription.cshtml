@model DrugCompare.Models.DashboardViewModel

<div class="section-header">
    Prescription Details
</div>

<article>
    <div>
        <table class="table-striped" border="1">
            <tr class="bold-tr">
                <td align="center">Drug Name</td>
                <td align="center">Doseage Name</td>
                <td align="center">Drug Quantity</td>
                <td align="center">Drug Price</td>
                <td align="center">Frequecncy</td>
                @*<input type="button" class="btn btn-primary" id="btn_AddNewDrug" /><i class="fa fa-plus-square"></i>Add New Prescrition*@
                <td align="center"><a href="@Url.Action("AddNewPrescription", "Home")" class="btn btn-default" id="btn_AddDrug"><i class="fa fa-plus-square"></i> Add New Prescrition</a>
            </tr>
            @{
                if (Model.SelectedPrescriptionVM != null && Model.SelectedPrescriptionVM.Count > 0)
                {
                    foreach (var item in Model.SelectedPrescriptionVM)
                    {
                        <tr>
                            <td>
                                @Html.Hidden("DrugId", @item.DrugId)
                                <span>@item.DrugName</span><br />
                                @{
                                    if (Model.SelectedPrescriptionVM.Count() > 1)
                                    {
                                        <a href='@Url.Action("DeleteDrug", "Home", new { DrugId = item.DrugId })'>Delete</a>
                                    }
                                }
                            </td>
                            <td>
                                @Html.Hidden("DoseId", @item.DoseId)
                                <span>@item.DoseageName</span>
                            </td>
                            <td>
                                <span>@item.DrugQuantity</span>
                            </td>
                            <td>
                                <span>@item.DrugPrice</span>
                            </td>
                            <td>
                                <span>@item.FrequencyName</span>
                            </td>
                            <td>
                                <a href="@Url.Action("RefilorAlternative", "Home", new { DrugId = item.DrugId })" class="btn btn-default" id="btn_RefilAlternative"><i class="fas fa-fill-drip"></i> Refilling \ Alternatives</a>
                            </td>

                        </tr>
                                        }
                                    }
            }
        </table>

    </div>
</article>

<script type="text/javascript">
    var h = $('#DrugName').attr('DrugId');
    $("#DrugName").click(function () {
        $('#selectPlanModalPopUp').modal('show');
    });

